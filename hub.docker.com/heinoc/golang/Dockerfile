FROM heinoc/nginx:1.8.1

MAINTAINER heinoc <tracychsh@126.com>



RUN set -eux \
	&& cd /home/work/temp \
# -----------------------------------------------------------------------------
# 下载golang安装包
# -----------------------------------------------------------------------------
	&& wget -O go1.9.tar.gz "https://storage.googleapis.com/golang/go1.9.linux-amd64.tar.gz" \
	&& tar -C /home/work/app -xzf go1.9.tar.gz \
# -----------------------------------------------------------------------------
# 创建GOPATH目录
# -----------------------------------------------------------------------------
	&& cd /home/work/src \
	&& mkdir golang \
	&& cd golang \
	&& mkdir bin \
	&& mkdir pkg \
	&& mkdir src \
# -----------------------------------------------------------------------------
# 删除golang安装包
# -----------------------------------------------------------------------------
	&& rm -rf /home/work/temp/*


# -----------------------------------------------------------------------------
# 配置golang环境变量
# -----------------------------------------------------------------------------
ENV PATH    $PATH:/home/work/app/go/bin
ENV GOPATH  /home/work/src/golang
ENV GOBIN   /home/work/app/go