FROM php:7.2-cli-alpine3.8

RUN apk update; \
    apk add \
        libxml2 \
        libjpeg-turbo \
        freetype \
        libpng \
        libzip \
        icu

RUN apk add \
    g++ \
    make \
    autoconf \
    libxml2-dev \
    libjpeg-turbo-dev \
    freetype-dev \
    libpng-dev \
    libzip-dev \
    icu-dev; \
    docker-php-ext-configure gd \
        --with-freetype-dir=/usr/include/ \
        --with-jpeg-dir=/usr/include/ \
        --with-png-dir=/usr/include/; \
    docker-php-ext-configure zip --with-libzip; \
    docker-php-ext-install -j$(nproc) gd zip opcache soap intl; \
    pecl install mongodb && docker-php-ext-enable mongodb; \
    apk del \
        g++ \
        make \
        autoconf \
        libxml2-dev \
        libjpeg-turbo-dev \
        freetype-dev \
        libpng-dev \
        libzip-dev; \
    rm -rf /tmp/*

COPY php.ini /usr/local/etc/php/php.ini

ENTRYPOINT ["docker-php-entrypoint"]
##<autogenerated>##
CMD ["php", "-a"]
##</autogenerated>##
