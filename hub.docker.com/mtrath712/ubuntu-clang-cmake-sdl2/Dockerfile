# base image (latest ubuntu lts)
FROM ubuntu:latest

# maintainer info
MAINTAINER Matthias Traunsberger <mtraunsberger@gmail.com>

# install clang, cmake and sdl2
RUN apt-get update
RUN apt-get install -y \
    cmake \
    clang \
    git \
    libsdl2-dev \
    libsdl2-gfx-dev \
    libsdl2-image-dev \
    libsdl2-mixer-dev \
    libsdl2-net-dev \
    libsdl2-ttf-dev \
