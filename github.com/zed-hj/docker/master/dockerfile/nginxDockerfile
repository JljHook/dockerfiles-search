FROM nginx

ENV TZ=Asia/Shenzhen

COPY nginx.conf /etc/nginx/nginx.conf
#COPY build/deploy.js /usr/vue-deploy/deploy.js
#RUN npm install qiniu --registry=https://registry.npm.taobao.org
#WORKDIR /usr/vue-deploy/
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone
EXPOSE 80
CMD nginx -g "daemon off;"
